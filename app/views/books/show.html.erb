<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
    <h2>User info</h2>
      <%= image_tag @book.user.get_profile_image(100,100) %>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= @book.user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @book.user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <%= link_to"",edit_user_path(@book.user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench"%>
        <i class="fas fa-user-cog"></i>
      </div>
    <h2 class="mt-3">New book</h2>
    <%= form_with model: Book.new do |f| %>
        <label for="book_title">Title</label>
        <%= f.text_field :title,class: "col-xs-12" %>
        <label for="book_body">Opinion</label>
        <%= f.text_area :body,class: "col-xs-12" %>
        
        <%= f.submit 'Create Book' %>
    <% end %>
    </div>  
    
    <div class="col-md-8 offset-md-1">
  		<h2>Book detail</h2>
  	<table class='table' >
    <tr>
     <td>
      <%= link_to user_path(@book.user_id) do %>
       <%= image_tag @book.user.get_profile_image(100,100) %>
        <nav>
           <%= @book.user.name %>
         </nav>
      <% end %>
     </td>
     <td><%= link_to @book.title %></td>
     <td><%= @book.body %></td>
     <% if @book.user_id == current_user.id %>
     <td><%= link_to"Edit", edit_book_path(@book.id),class:"btn-sm btn-success" %></td>
     <td><%= link_to "Destroy", book_path(@book.id), class:"btn-sm btn-danger destroy(@book.id)", method: :delete,data: {confirm: "本当に消しますか？"} %></td>
     <% end %>
    </tr>
    </table>
    </div>
  </div>
</div>

